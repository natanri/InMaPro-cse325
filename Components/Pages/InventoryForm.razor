@using InMaPro_cse325.Models
@namespace InMaPro_cse325.Components.Pages

<EditForm Model="@Model" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <label>Nombre:</label>
    <InputText @bind-Value="Model.Name" />

    <label>Categor√≠a:</label>
    <InputText @bind-Value="Model.Category" />

    <label>Cantidad:</label>
    <InputNumber @bind-Value="Model.Quantity" />

    <label>Costo:</label>
    <InputNumber @bind-Value="Model.Cost" />

    <button type="submit">Guardar</button>
</EditForm>

@code {
    [Parameter] public InventoryItem Model { get; set; } = new();
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
