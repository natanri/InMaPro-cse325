@page "/inventory"
@namespace InMaPro_cse325.Components.Pages

@using Microsoft.EntityFrameworkCore
@inject AppDbContext Context

<PageTitle>Inventario</PageTitle>

<h1>Lista de Inventario</h1>

@if (items == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Cantidad</th>
                <th>Precio</th>
                <th>Categoría</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Category?.Name</td>
                    <td>
                        <a href="/inventory/edit/@item.Id" class="btn btn-sm btn-primary">Editar</a>
                        <a href="/inventory/detail/@item.Id" class="btn btn-sm btn-info">Detalles</a>
                        <button @onclick="@(() => DeleteItem(item.Id))" class="btn btn-sm btn-danger">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="/inventory/create" class="btn btn-success">Nuevo Item</a>

@code {
    private List<InventoryItem>? items;
    
    protected override async Task OnInitializedAsync()
    {
        items = await Context.InventoryItems
            .Include(i => i.Category)
            .ToListAsync();
    }
    
    private async Task DeleteItem(int id)
    {
        var item = await Context.InventoryItems.FindAsync(id);
        if (item != null)
        {
            Context.InventoryItems.Remove(item);
            await Context.SaveChangesAsync();
            items = await Context.InventoryItems
                .Include(i => i.Category)
                .ToListAsync();
        }
    }
}
