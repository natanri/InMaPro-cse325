@page "/inventory"
@namespace InMaPro_cse325.Components.Pages

@using Microsoft.EntityFrameworkCore
@using InMaPro_cse325.Services
@inject AppDbContext Context
@inject NavigationManager Navigation
@inject IExportService ExportService
@inject IJSRuntime JSRuntime

<PageTitle>Inventario</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="bi bi-box-seam me-2"></i>Gestión de Inventario
            </h1>
            <p class="text-muted mb-0">Administra todos los productos en inventario</p>
        </div>
        <a href="/inventory/create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Producto
        </a>
    </div>

    <!-- Panel de Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">
                        <i class="bi bi-search me-1"></i>Buscar
                    </label>
                    <input type="text" class="form-control" 
                           placeholder="Buscar por nombre o descripción..."
                           @bind="searchTerm" @bind:event="oninput" />
                </div>
                
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-filter me-1"></i>Categoría
                    </label>
                    <select class="form-control" @bind="selectedCategoryId" @bind:event="onchange">
                        <option value="0">Todas las categorías</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                
                <div class="col-md-3">
                    <label class="form-label">
                        <i class="bi bi-sort-down me-1"></i>Ordenar por
                    </label>
                    <select class="form-control" @bind="sortBy" @bind:event="onchange">
                        <option value="name">Nombre (A-Z)</option>
                        <option value="name_desc">Nombre (Z-A)</option>
                        <option value="quantity">Cantidad (Menor a Mayor)</option>
                        <option value="quantity_desc">Cantidad (Mayor a Menor)</option>
                        <option value="price">Precio (Menor a Mayor)</option>
                        <option value="price_desc">Precio (Mayor a Menor)</option>
                    </select>
                </div>
                
                <div class="col-md-2 d-flex align-items-end">
                    <button class="btn btn-outline-secondary w-100" @onclick="ResetFilters">
                        <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                    </button>
                </div>
            </div>
            
            <!-- Filtros de Stock -->
            <div class="row mt-3">
                <div class="col-md-12">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" 
                               id="lowStock" @bind="showLowStock" />
                        <label class="form-check-label" for="lowStock">
                            <span class="badge bg-warning">Bajo Stock</span> (menos de 10 unidades)
                        </label>
                    </div>
                    
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="checkbox" 
                               id="outOfStock" @bind="showOutOfStock" />
                        <label class="form-check-label" for="outOfStock">
                            <span class="badge bg-danger">Agotado</span> (0 unidades)
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Inventario -->
    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h6 class="m-0 fw-bold">
                <i class="bi bi-table me-1"></i>Lista de Productos
            </h6>
            
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary btn-sm" 
                        @onclick="ExportToCsv" 
                        title="Exportar a CSV"
                        disabled="@isExporting">
                    @if (isExporting)
                    {
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                        <span class="ms-1">Exportando...</span>
                    }
                    else
                    {
                        <i class="bi bi-file-earmark-spreadsheet"></i>
                        <span class="ms-1">Exportar CSV</span>
                    }
                </button>
            </div>
        </div>
        
        <div class="card-body">
            @if (loading)
            {
                <LoadingSpinner 
                    Visible="true"
                    Text="Cargando inventario..."
                    SubText="Por favor, espera un momento"
                    Size="LoadingSpinner.SpinnerSize.Large"
                    Center="true"
                    FullScreen="false" />
            }
            else if (!filteredItems.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="mt-3">No se encontraron productos</h5>
                    <p class="text-muted">@GetNoResultsMessage()</p>
                    <a href="/inventory/create" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle me-1"></i>Crear Primer Producto
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-light">
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Precio</th>
                                <th>Categoría</th>
                                <th>Estado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in filteredItems)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="symbol symbol-50px me-3">
                                                <div class="symbol-label bg-light-primary">
                                                    <i class="bi bi-box text-primary fs-3"></i>
                                                </div>
                                            </div>
                                            <div>
                                                <a href="/inventory/detail/@item.Id" 
                                                   class="text-dark fw-bold text-hover-primary mb-1 fs-6">
                                                    @item.Name
                                                </a>
                                                @if (!string.IsNullOrEmpty(item.Description))
                                                {
                                                    <p class="text-muted mb-0 fs-7">@GetShortDescription(item.Description)</p>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center align-middle">
                                        <span class="badge @GetQuantityBadgeClass(item.Quantity)">
                                            @item.Quantity
                                        </span>
                                    </td>
                                    <td class="text-end align-middle fw-bold">
                                        @item.Price.ToString("C")
                                    </td>
                                    <td class="align-middle">
                                        <span class="badge bg-info">
                                            @item.Category?.Name
                                        </span>
                                    </td>
                                    <td class="align-middle">
                                        @GetStockStatus(item.Quantity)
                                    </td>
                                    <td class="text-center align-middle">
                                        <div class="btn-group" role="group">
                                            <a href="/inventory/detail/@item.Id" 
                                               class="btn btn-sm btn-icon btn-light" 
                                               title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/inventory/edit/@item.Id" 
                                               class="btn btn-sm btn-icon btn-light" 
                                               title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-sm btn-icon btn-light-danger" 
                                                    @onclick="@(() => DeleteItem(item.Id))"
                                                    title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6" class="text-muted small">
                                    Mostrando @filteredItems.Count de @allItems.Count productos
                                    @if (!string.IsNullOrEmpty(searchTerm) || selectedCategoryId > 0)
                                    {
                                        <span class="ms-2">
                                            <i class="bi bi-funnel"></i> Filtros aplicados
                                        </span>
                                    }
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private bool loading = true;
    private bool isExporting = false;
    private List<InventoryItem> allItems = new();
    private List<InventoryItem> filteredItems = new();
    private List<Category> categories = new();
    
    // Filtros
    private string searchTerm = "";
    private int selectedCategoryId = 0;
    private string sortBy = "name";
    private bool showLowStock = false;
    private bool showOutOfStock = false;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }
    
    private async Task LoadData()
    {
        loading = true;
        StateHasChanged();
        
        try
        {
            // Cargar todos los items con categorías
            allItems = await Context.InventoryItems
                .Include(i => i.Category)
                .ToListAsync();
            
            // Cargar categorías
            categories = await Context.Categories
                .OrderBy(c => c.Name)
                .ToListAsync();
            
            ApplyFilters();
        }
        catch (Exception ex)
        {
            await ShowError("Error", $"Error cargando datos: {ex.Message}");
        }
        finally
        {
            loading = false;
            StateHasChanged();
        }
    }
    
    private void ApplyFilters()
    {
        var query = allItems.AsEnumerable();
        
        // Filtro de búsqueda
        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var term = searchTerm.ToLower();
            query = query.Where(i => 
                i.Name.ToLower().Contains(term) ||
                (i.Description != null && i.Description.ToLower().Contains(term)));
        }
        
        // Filtro por categoría
        if (selectedCategoryId > 0)
        {
            query = query.Where(i => i.CategoryId == selectedCategoryId);
        }
        
        // Filtros de stock
        if (showLowStock)
        {
            query = query.Where(i => i.Quantity < 10 && i.Quantity > 0);
        }
        
        if (showOutOfStock)
        {
            query = query.Where(i => i.Quantity == 0);
        }
        
        // Ordenamiento
        filteredItems = sortBy switch
        {
            "name_desc" => query.OrderByDescending(i => i.Name).ToList(),
            "quantity" => query.OrderBy(i => i.Quantity).ToList(),
            "quantity_desc" => query.OrderByDescending(i => i.Quantity).ToList(),
            "price" => query.OrderBy(i => i.Price).ToList(),
            "price_desc" => query.OrderByDescending(i => i.Price).ToList(),
            _ => query.OrderBy(i => i.Name).ToList()
        };
    }
    
    private void ResetFilters()
    {
        searchTerm = "";
        selectedCategoryId = 0;
        sortBy = "name";
        showLowStock = false;
        showOutOfStock = false;
        ApplyFilters();
    }
    
    private string GetQuantityBadgeClass(int quantity)
    {
        return quantity switch
        {
            0 => "bg-danger",
            < 10 => "bg-warning",
            _ => "bg-success"
        };
    }
    
    private string GetStockStatus(int quantity)
    {
        return quantity switch
        {
            0 => "Agotado",
            < 5 => "Stock Crítico",
            < 10 => "Bajo Stock",
            < 20 => "Stock Medio",
            _ => "Stock Alto"
        };
    }
    
    private string GetShortDescription(string description)
    {
        if (string.IsNullOrEmpty(description))
            return "";
        
        return description.Length > 50 
            ? description.Substring(0, 50) + "..." 
            : description;
    }
    
    private string GetNoResultsMessage()
    {
        if (!string.IsNullOrEmpty(searchTerm))
            return $"No se encontraron productos para '{searchTerm}'";
        
        if (selectedCategoryId > 0)
            return $"No hay productos en esta categoría";
        
        if (showLowStock)
            return "No hay productos con bajo stock";
        
        if (showOutOfStock)
            return "No hay productos agotados";
        
        return "No hay productos en el inventario";
    }
    
    private async Task DeleteItem(int id)
    {
        var item = allItems.FirstOrDefault(i => i.Id == id);
        if (item != null)
        {
            Context.InventoryItems.Remove(item);
            await Context.SaveChangesAsync();
            await LoadData();
            await ShowSuccess("Eliminado", "Producto eliminado correctamente");
        }
    }
    
    private async Task ExportToCsv()
    {
        isExporting = true;
        StateHasChanged();
        
        try
        {
            // Generar CSV
            var csvData = ExportService.ExportInventoryToCsv(filteredItems);
            var fileName = ExportService.GetCsvFileName();
            
            // Descargar usando JavaScript
            await JSRuntime.InvokeVoidAsync("downloadFileFromBytes", 
                fileName, 
                csvData, 
                "text/csv;charset=utf-8");
            
            // Mostrar notificación de éxito
            await ShowSuccess("Exportación Exitosa", 
                $"Se descargó el archivo: {fileName}");
        }
        catch (Exception ex)
        {
            await ShowError("Error en Exportación", 
                $"No se pudo exportar el archivo: {ex.Message}");
        }
        finally
        {
            isExporting = false;
            StateHasChanged();
        }
    }
    
    private async Task ShowSuccess(string title, string message)
    {
        await JSRuntime.InvokeVoidAsync("showToast", "success", title, message);
    }
    
    private async Task ShowError(string title, string message)
    {
        await JSRuntime.InvokeVoidAsync("showToast", "danger", title, message);
    }
}